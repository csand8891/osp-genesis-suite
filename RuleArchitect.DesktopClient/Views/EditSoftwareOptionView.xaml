<UserControl x:Class="RuleArchitect.DesktopClient.Views.EditSoftwareOptionView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RuleArchitect.DesktopClient.Views"
             xmlns:vm="clr-namespace:RuleArchitect.DesktopClient.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             FontFamily="{materialDesign:MaterialDesignFont}"
             d:DataContext="{d:DesignInstance Type=vm:EditSoftwareOptionViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="800" d:DesignWidth="550">
    <UserControl.Resources>
        <Style TargetType="Label" BasedOn="{StaticResource MaterialDesignLabel}">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,5,8"/>
        </Style>
        <Style TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Margin" Value="0,0,16,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
            <Setter Property="Margin" Value="0,0,16,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="DatePicker" BasedOn="{StaticResource MaterialDesignOutlinedDatePicker}">
            <Setter Property="Margin" Value="0,0,16,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,24,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="160"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                       Text="{Binding ViewTitle}" 
                       Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,20"/>

            <Label Grid.Row="1" Grid.Column="0" Content="Primary Name:"/>
            <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding PrimaryName, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Enter primary name"/>

            <Label Grid.Row="2" Grid.Column="0" Content="Alternative Names:"/>
            <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AlternativeNames, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="e.g., AltName1; AltName2"/>

            <Label Grid.Row="3" Grid.Column="0" Content="Source File Name:"/>
            <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding SourceFileName, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="e.g., rules.xlsx"/>

            <Label Grid.Row="4" Grid.Column="0" Content="Control System:"/>
            <ComboBox Grid.Row="4" Grid.Column="1"
                      ItemsSource="{Binding AvailableControlSystems}"
                      SelectedValue="{Binding ControlSystemId, UpdateSourceTrigger=PropertyChanged, TargetNullValue={x:Null}}"
                      SelectedValuePath="ControlSystemId"
                      DisplayMemberPath="Name"
                      materialDesign:HintAssist.Hint="Select Control System"
                      Style="{StaticResource MaterialDesignOutlinedComboBox}"/>

            <Label Grid.Row="5" Grid.Column="0" Content="Notes:"/>
            <TextBox Grid.Row="5" Grid.Column="1" Text="{Binding Notes, UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap" MinLines="3" MaxLines="5" VerticalScrollBarVisibility="Auto" materialDesign:HintAssist.Hint="Additional notes"/>

            <Label Grid.Row="6" Grid.Column="0" Content="Checked By:"/>
            <TextBox Grid.Row="6" Grid.Column="1" Text="{Binding CheckedBy, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="User who checked"/>

            <Label Grid.Row="7" Grid.Column="0" Content="Checked Date:"/>
            <DatePicker Grid.Row="7" Grid.Column="1" SelectedDate="{Binding CheckedDate, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Date of check"/>

            <TextBlock Grid.Row="8" Grid.Column="0" Text="Version:" VerticalAlignment="Center"/>
            <TextBlock Grid.Row="8" Grid.Column="1" Text="{Binding Version}" VerticalAlignment="Center" Margin="0,5,0,12"/>

            <TextBlock Grid.Row="9" Grid.Column="0" Text="Last Modified:" VerticalAlignment="Center"/>
            <StackPanel Grid.Row="9" Grid.Column="1" Orientation="Vertical" Margin="0,5,0,12">
                <TextBlock Text="{Binding LastModifiedDate, StringFormat='{}{0:g}'}"/>
                <TextBlock Text="{Binding LastModifiedBy, StringFormat='by {0}'}" Foreground="{DynamicResource MaterialDesignBodyLight}"/>
            </StackPanel>

            <Separator Grid.Row="10" Grid.ColumnSpan="2" Margin="0,15,0,5"/>
            <TextBlock Grid.Row="11" Grid.Column="0" Grid.ColumnSpan="2" Text="Option Numbers" 
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
            <StackPanel Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <ItemsControl ItemsSource="{Binding OptionNumbers}" Margin="0,0,0,8">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type vm:OptionNumberViewModel}">
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" 
                                         Text="{Binding OptionNumber, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         materialDesign:HintAssist.Hint="Enter option number"
                                         Margin="0,0,8,0"/>
                                <Button Grid.Column="1" 
                                        Command="{Binding DataContext.RemoveOptionNumberCommand, RelativeSource={RelativeSource AncestorType={x:Type local:EditSoftwareOptionView}}}" 
                                        CommandParameter="{Binding}" Style="{StaticResource MaterialDesignToolButton}" ToolTip="Remove Option Number" Padding="4">
                                    <materialDesign:PackIcon Kind="MinusCircleOutline" Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <Button Command="{Binding AddOptionNumberCommand}" Style="{StaticResource MaterialDesignFlatButton}" HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Option Number" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <Separator Grid.Row="13" Grid.ColumnSpan="2" Margin="0,15,0,5"/>
            <TextBlock Grid.Row="14" Grid.Column="0" Grid.ColumnSpan="2" Text="Specification Codes" 
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Margin="0,0,0,8"/>
            <Grid Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DataGrid ItemsSource="{Binding SpecificationCodes}" 
                          SelectedItem="{Binding SelectedSpecificationCode}"
                          AutoGenerateColumns="False" CanUserAddRows="False" MaxHeight="250" 
                          IsReadOnly="True" HorizontalScrollBarVisibility="Disabled"
                          materialDesign:DataGridAssist.CellPadding="8,4,8,4" 
                          materialDesign:DataGridAssist.ColumnHeaderPadding="8,4">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="*"/>
                        <DataGridTextColumn Header="Spec No" Binding="{Binding SpecCodeNo}" Width="*"/>
                        <DataGridTextColumn Header="Spec Bit" Binding="{Binding SpecCodeBit}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding Description}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Activation Rule" Binding="{Binding ActivationRuleName}" Width="*"/>
                        <DataGridTextColumn Header="Interpretation" Binding="{Binding SpecificInterpretation}" Width="1.5*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    <Setter Property="ToolTip" Value="{Binding SpecificInterpretation}"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.EditSpecificationCodeCommand, RelativeSource={RelativeSource AncestorType={x:Type local:EditSoftwareOptionView}}}" 
                                            CommandParameter="{Binding}" 
                                            Style="{StaticResource MaterialDesignToolButton}" Padding="2" ToolTip="Edit Spec Code">
                                        <materialDesign:PackIcon Kind="PencilOutline"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Command="{Binding DataContext.RemoveSpecificationCodeCommand, RelativeSource={RelativeSource AncestorType={x:Type local:EditSoftwareOptionView}}}" 
                                            CommandParameter="{Binding}" 
                                            Style="{StaticResource MaterialDesignToolButton}" Padding="2" ToolTip="Remove Spec Code">
                                        <materialDesign:PackIcon Kind="MinusCircleOutline" Foreground="{DynamicResource MaterialDesignValidationErrorBrush}"/>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Grid.Row="1" Command="{Binding AddSpecificationCodeCommand}" 
                        Style="{StaticResource MaterialDesignFlatButton}" 
                        HorizontalAlignment="Left" Margin="0,8,0,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                        <TextBlock Text="Add Specification Code" Margin="4,0,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>

        </Grid>
    </ScrollViewer>
</UserControl>